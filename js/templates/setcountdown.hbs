<form class="navbar-form navbar-right has-error" id="countdownform">
    <div class="form-group">
        <label class="sr-only" for="#countdowninput">Start of #antidiogenes weekend</label>
        <span class="help-block">When does the #antidiogenes weekend start?</span>
        <input type="text" class="form-control" placeholder="month-day hour am|pm" id="countdowninput">
    </div>
    <input type="button" class="btn btn-default" id="setcountdown" value="Set Countdown Clock" disabled>
    {{#if goalSet}}<button type="button" class="btn btn-default navbar-btn" id="changegoal">Change Goal</button>{{/if}}
</form>